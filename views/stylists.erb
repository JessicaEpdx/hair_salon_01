<div class="row">
  <div class="col-sm-10">
  </div>
  <div class="col-sm-2">
    <div class="row">
      <a href="/" role="button" class="btn btn-primary" style=" margin-top: 20px">Home</a>
    </div>
    <div class="row">
      <a href="/stylists" role="button" class="btn btn-warning" style=" margin-top: 7px">All Stylists</a>
    </div>
    <div class="row">
      <a href="/clients" role="button" class="btn btn-info" style=" margin-top: 7px">All Clients</a>
    </div>
  </div>
</div>
<br>

<div class="row">
<div class="col-sm-6">
  <h2 style="font-size:40px;">All Stylists</h2>
  <ul>
  <% if @all_stylists.length()>0 %>
  <% @all_stylists.each() do |stylist| %>
      <li><a href="/stylists/<%= stylist.id()%>"><%= stylist.name() %></a></li>
      <% end %>
    <%else%>
    <li><%="No stylists yet" %></li>
    <%end%>
  </ul>
</div>
<div class="col-sm-6">
  <h2>Add a stylist</h2>
  <form action="/stylists" method="post">
  <div class="form-group">
    <label for="stylist_name">New Stylist Name</label>
    <input id="stylist_name" name="stylist_name" type="text" class="form-control" placeholder="ex: Molly Shannon">
  </div>

  <button type="submit" class="btn btn-success">Add Stylist</button>
  </form>
</div>

</div>
