<div class="row">
  <div class="col-sm-6">
    <h1 style="font-size:30px;">Add a Client to <%= @stylist.name()%></h1>
    <form action = "/success" method= "post">
      <input name="_method" type="hidden" value="patch">
      <input name="stylist_id" id="stylist_id" type="hidden" value="<%=@stylist.id()%>">
      <div class="form-group">
        <label for="client">Client Name:</label>
        <select id="client_id" name="client_id" type"text">
          <% @all_clients.each do |client| %>
          <option value="<%= client.id()%>"><%= client.name() %></option>
        <% end %>
        </select>
      </div>

        <button type="submit" class="btn btn-success">Add Client</button>
      </form>
  </div>

  <div class="col-sm-6">
    <h1 style="font-size:30px;">Change Stylist Name</h1>
    <form action = "/success/stylist" method= "post">
      <input name="_method" type="hidden" value="patch">
      <input name="stylist_id" id="stylist_id" type="hidden" value="<%=@stylist.id()%>">
      <div class="form-group">
        <label for="client">New Stylist Name:</label>
        <input id="name" name="name" type="text">
        </select>
      </div>

      <button type="submit" class="btn btn-success">Change Name</button>
    </form>
  </div>
</div>

<br><br><br>
<h1 style="font-size:30px;">Clients of <%= @stylist.name()%></h1>

<ul>
<% if @stylist.clients().length > 0 %>
  <% @clients.each() do |client| %>
      <li><a href="/clients/<%= client.id()%>"><%= client.name() %></li>
    <% end %>
  <% else %>
  <%= "This stylist has no clients" %>
  <%end %>
</ul>
